<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:alpha="0.8"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_picture"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@mipmap/default_user_pic" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/upload_image_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/user_profile_picture"
                android:layout_marginLeft="78dp"
                android:layout_marginStart="78dp"
                android:background="@color/colorWhite"
                app:fabSize="mini"
                app:srcCompat="@drawable/ic_add" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_user_fname"
                android:drawableStart="@drawable/ic_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1.0"
                android:background="@drawable/edit_text_norm"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:padding="8dp" />

            <EditText
                android:id="@+id/edt_user_lname"
                android:drawableStart="@drawable/ic_profile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:layout_weight="1.0"
                android:background="@drawable/edit_text_norm"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:padding="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableStart="@drawable/ic_profile"
            android:background="@drawable/edit_text_norm"
            android:hint="Username"
            android:inputType="textPersonName"
            android:padding="8dp" />

        <EditText
            android:id="@+id/edt_user_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:drawableStart="@drawable/ic_phone"
            android:background="@drawable/edit_text_norm"
            android:hint="Phone Number"
            android:inputType="phone"
            android:padding="8dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_user_city"
                android:drawableStart="@drawable/ic_city"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1.0"
                android:background="@drawable/edit_text_norm"
                android:hint="  City"
                android:inputType="text"
                android:padding="8dp" />

            <EditText
                android:id="@+id/edt_user_state"
                android:drawableStart="@drawable/ic_location"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="8dp"
                android:layout_weight="1.0"
                android:background="@drawable/edit_text_norm"
                android:hint="State"
                android:inputType="text"
                android:padding="8dp" />
        </LinearLayout>

        <EditText
            android:id="@+id/edt_user_password"
            android:drawableStart="@drawable/ic_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_norm"
            android:hint="Your password"
            android:inputType="textPassword"
            android:padding="8dp" />

        <EditText
            android:id="@+id/edt_user_password_2"
            android:drawableStart="@drawable/ic_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/edit_text_norm"
            android:hint="Re-enter password"
            android:inputType="textPassword"
            android:padding="8dp" />

        <Button
            android:id="@+id/sign_up_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/button_light_green_bg"
            android:text="Sign up"
            android:textColor="@color/colorWhite"
            android:textSize="23sp" />
    </LinearLayout>

</ScrollView>
